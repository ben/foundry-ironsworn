<article
	class='rank-pips progress-rank-pips nogrow'
	aria-label='{{localize "IRONSWORN.ChallengeRank"}}'
	aria-valuetext='{{currentRank}}'
	aria-valuenow='{{rank}}'
>
	{{#each rankButtons}}
		<button
			type='button'
			class='rank-pip nogrow theme-pip'
			data-rank='{{rank}}'
			data-tooltip='{{i18nRank}}'
			data-tooltip-direction='UP'
			aria-selected='{{selected}}'
		>
			<svg
				class='svg-circle svg pip-shape'
				version='1.1'
				xmlns='http://www.w3.org/2000/svg'
				viewBox='0 0 10 10'
				role='presentational'
			>
				<circle cx='5' cy='5' r='5' vector-effect='non-scaling-stroke'>
				</circle>
			</svg>
		</button>
	{{/each}}
</article>