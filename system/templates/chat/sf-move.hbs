{{!
{Name: "Face Danger", Source: {…}, Stats: Array(5), Text: "When …", …}
}}

<article
	class='ironsworn-message {{themeClass}} flexcol'
	data-tooltip-direction='LEFT'
>
	<h3>{{move.name}}</h3>

	<div
		class='dice-result dice-tooltip dice-roll ironsworn-roll'
		data-move='{{move.Name}}'
	>
		<div class='move-outcome'>
			{{#if move.system.Oracles?.length}}
				{{{stripTables renderedText}}}
			{{else}}
				{{{renderedText}}}
			{{/if}}
		</div>
	</div>

	{{#if nextOracles}}
		<section class='move-oracle-buttons flexrow'>
			{{#each nextOracles}}
				<button
					class='icon-button clickable isicon-oracle'
					data-iron-action='oracleRoll'
					data-tooltip='{{{localize "IRONSWORN.RollOracleTable" title=name}}}'
					data-tableid='{{id}}'
					type='button'
				>
					<span class='button-text'>{{name}}</span>
				</button>
			{{/each}}
		</section>
	{{/if}}

</article>
