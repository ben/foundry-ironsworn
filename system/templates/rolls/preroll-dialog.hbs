<form class='preroll-dialog{{#if action}} action-roll-dialog{{else}} progress-roll-dialog{{/if}}'>
  {{#if move}}
  <section class='roll-trigger-text'>
    {{{renderedTriggerText}}}
  </section>
  {{#if (gt move.system.Trigger.Options.length 1)}}
  <ul class='trigger-options'>
    {{#each move.system.Trigger.Options}}
    {{#if Text}}
    <li class='trigger-option'>
      {{Text}}:
      <strong>{{formatRollMethod Method Using}}</strong>
    </li>
    {{/if}}
    {{/each}}
  </ul>
  {{/if}}
  {{/if}}
  <section class='dice-roll ironsworn-roll'>
    {{{graphic}}}
  </section>
  {{#if action}}
  <fieldset class='form-group'>
    <label for='roll-input-adds'>{{localize 'IRONSWORN.Adds'}}</label>
    <input id='roll-input-adds' type='number' step='1' name='adds' value='0' />
  </fieldset>
  {{/if}}

  {{#if showActorSelect}}
  <fieldset class='form-group'>
    <label for='char'>{{localize 'IRONSWORN.ACTOR.TypeCharacter'}}</label>
    <select name='char' id='char' class='select-character'>
      {{#each allActors}}
      <option value='{{id}}'>
        {{name}}
      </option>
      {{/each}}
    </select>
  </fieldset>
  {{/if}}
  {{! TODO: simple options from the move + actor assets }}
  <details class='advanced-roll-options' {{#if advancedOptionsOpen}}open{{/if}}>
    <summary>{{localize 'IRONSWORN.RollDialog.AdvancedRollOptions'}}</summary>

    <fieldset class='form-group'>
      <label>
        {{localize 'IRONSWORN.RollDialog.PredeterminedOutcome'}}
      </label>
      <select name='automaticOutcomeValue'>
        <option value='null'></option>
        <option value='0'>{{localize 'IRONSWORN.Miss'}}</option>
        <option value='1'>{{localize 'IRONSWORN.Weak_hit'}}</option>
        <option value='2'>{{localize 'IRONSWORN.Strong_hit'}}</option>
      </select>
    </fieldset>

    {{#if action}}
    <fieldset class='form-group'>
      <label>{{localize 'IRONSWORN.RollDialog.PresetActionDie'}}</label>
      <input type='number' step='1' name='presetActionDieValue' {{#if advancedOptionsOpen}}autofocus{{/if}} />
    </fieldset>
    {{/if}}

    <fieldset class='form-group'>
      <label>{{localize 'IRONSWORN.RollDialog.PresetChallengeDice'}}</label>
      <div class="flexrow" style="gap: var(--ironsworn-spacer-md)">
        <input type='number' step='1' name='presetChallengeDie1Value' {{#if advancedOptionsOpen}}autofocus{{/if}} />
        <input type='number' step='1' name='presetChallengeDie2Value' />
      </div>
    </fieldset>

    <fieldset class='form-group'>
      <label>
        {{localize 'IRONSWORN.RollDialog.ExtraChallengeDice'}}
      </label>
      <input type='number' step='1' name='extraChallengeDiceValue' min='0' />
    </fieldset>

  </details>
</form>
