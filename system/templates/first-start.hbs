<style>
  .first-start .box label { padding: 1rem; } .first-start h1 { border: none; }
  .first-start h2 { border: none; margin-top: 1rem; } .first-start label.flexcol
  { align-items: center; } .first-start img { border: none; width: 170px; }

</style>

<form class='first-start'>
  <h1>{{localize 'IRONSWORN.First Start.Welcome'}}</h1>
  <p>{{localize 'IRONSWORN.First Start.Intro'}}</p>

  <h2>{{localize 'IRONSWORN.First Start.CharacterSheet'}}</h2>
  <p>{{localize 'IRONSWORN.First Start.DefaultSheet'}}</p>
  <div class='boxgroup'>
    <div class='flexrow boxrow'>
      <div class='box flexrow'>
        <label class='flexcol'>
          <img
            src='systems/foundry-ironsworn/assets/welcome/ironsworn-sheet.jpg'
            alt='Ironsworn sheet'
          />
          <p>
            <input
              type='radio'
              name='sheet'
              value='ironsworn.IronswornCharacterSheetV2'
            />
            {{localize 'IRONSWORN.Ironsworn'}}
          </p>
        </label>
      </div>
      <div class='box flexrow'>
        <label class='flexcol'>
          <img
            src='systems/foundry-ironsworn/assets/welcome/starforged-sheet.jpg'
            alt='Starforged sheet'
          />
          <p>
            <input
              type='radio'
              name='sheet'
              value='ironsworn.StarforgedCharacterSheet'
            />
            {{localize 'IRONSWORN.Starforged'}}
          </p>
        </label>
      </div>
    </div>
  </div>

  <h2>{{localize 'IRONSWORN.First Start.MovesOracles'}}</h2>
  <p>{{localize 'IRONSWORN.First Start.DefaultMovesOracles'}}</p>
  <div class='boxgroup'>
    <div class='flexrow boxrow'>
      <div class='box flexrow'>
        <label>
          <input type='radio' name='moves' value='ironsworn' />
          {{localize 'IRONSWORN.Ironsworn'}}
        </label>
      </div>
      <div class='box flexrow'>
        <label>
          <input type='radio' name='moves' value='starforged' />
          {{localize 'IRONSWORN.Starforged'}}
        </label>
      </div>
      <div class='box flexrow'>
        <label>
          <input type='radio' name='moves' value='sheet' checked='checked' />
          {{localize 'IRONSWORN.First Start.MatchSheet'}}
        </label>
      </div>
    </div>
  </div>

  <h2>{{localize 'IRONSWORN.First Start.SettingTruths'}}</h2>
  <p>{{localize 'IRONSWORN.First Start.GenerateTruths'}}</p>
  <div class='boxgroup'>
    <div class='flexrow boxrow'>
      <div class='box flexcol'>
        <label>
          <input type='radio' name='truths' value='ironsworn' />
          {{localize 'IRONSWORN.First Start.YesFor'}}
          {{localize 'IRONSWORN.Ironsworn'}}
        </label>
      </div>
      <div class='box flexcol'>
        <label>
          <input type='radio' name='truths' value='starforged' />
          {{localize 'IRONSWORN.First Start.YesFor'}}
          {{localize 'IRONSWORN.Starforged'}}
        </label>
      </div>
      <div class='box flexcol'>
        <label>
          <input type='radio' name='truths' value='never' />
          {{localize 'IRONSWORN.First Start.NeverAsk'}}
        </label>
      </div>
    </div>
  </div>

  <div class='boxgroup' style='margin-top: 1rem'>
    <div class='boxrow flexrow'>
      <button
        type='button'
        data-on-click='saveSettings'
        class='clickable block'
      >
        <i class='fas fa-check'></i>
        {{localize 'IRONSWORN.First Start.Save'}}
      </button>
    </div>
  </div>

</form>