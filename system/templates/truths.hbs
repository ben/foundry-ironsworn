<form>
  <aside class="flexrow nowrap" style="
    border: 1px solid var(--ironsworn-color-cool-70);
    border-radius: var(--ironsworn-border-radius-md);
    padding: 0.75em;
    gap: var(--ironsworn-spacer-md);
  ">
    <i class="fa-regular fa-circle-info nogrow" style="margin-top: 0.1em;"></i>
    <p style="margin: 0;">{{ localize 'IRONSWORN.TruthsAreOptional' }}</p>
  </aside>

  {{#each truths.Categories}}
  <h2 style="margin-top: 1em;">{{Name}}</h2>

  {{#each Options}}
  <div class="flexrow">
    <input type="radio" name="{{../Name}} class="nogrow" style="flex: 0 0 20px; margin: 8px; align-self: flex-start;"
      id="{{concat ../Name '#' @index}}" data-category="{{../Name}}">
    <div class="flexcol">
      <label for="{{concat ../Name '#' @index}}" class="description">
        <p>{{Truth}}</p>
        <p><em>{{localize 'IRONSWORN.TruthQuestStarter'}} {{Quest}}</em></p>
      </label>
    </div>
  </div>
  {{/each}}

  <div class="flexrow">
    <input type="radio" name="{{Name}} class="nogrow" style="flex: 0 0 20px; margin: var(--ironsworn-spacer-md) 8px;""
      id="{{concat Name '#custom'}}"  data-category="{{Name}}">
    <input type="text" class="ironsworn__custom__truth description" placeholder="{{localize 'IRONSWORN.CustomTruth'}}">
  </div>

  {{/each}}

  <hr>

  <div class="flexcol">
    <button class="ironsworn__save__truths">
      <i class="fas fa-feather"></i>
      {{localize 'IRONSWORN.SaveYourTruths'}}
    </button>
  </div>
</form>
