<form class='{{cssClass}}' autocomplete='off'>
  <header class='sheet-header'>
    <h1 class='charname'>{{localize 'IRONSWORN.Bonds'}}</h1>
  </header>

  {{#each data.data.bonds}}
    <div class='item-row' data-idx='{{@index}}'>
      <div class='flexrow'>
        <input
          class='attribute-value'
          type='text'
          name='data.bonds.{{@index}}.name'
          value='{{name}}'
        />
        <div
          class='btn-block item-row-control delete-bond'
          data-index='{{@index}}'
          style='flex-grow: 0;'
        >
          <i class='fas fa-trash'></i>
        </div>

      </div>
      <textarea name='data.bonds.{{@index}}.notes'>{{notes}}</textarea>
    </div>
  {{/each}}

  <div class='btn-block add-bond' style='padding: 5px; text-align: center;'>
    <i class='fas fa-plus'></i>
  </div>

</form>